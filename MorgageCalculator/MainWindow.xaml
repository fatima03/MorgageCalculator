        xmlns:local="clr-namespace:MorgageCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="424.4" Width="574.4">
    <Grid HorizontalAlignment="Left" Width="538">
        <Label x:Name="lbl_Title" Content="Mortgage Calculator" HorizontalAlignment="Left" Margin="60,53,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="lbl_MonthlyCost" Content="Monthly Cost" HorizontalAlignment="Left" Margin="60,95,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Amount1" Content="Mortgage Amount" HorizontalAlignment="Left" Margin="60,169,0,0" VerticalAlignment="Top"/>
