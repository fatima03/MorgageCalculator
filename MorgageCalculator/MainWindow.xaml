        <Label x:Name="lbl_Interest1" Content="Interest %" HorizontalAlignment="Left" Margin="219,169,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_MonthlyPayments" Content="Monthly Payment" HorizontalAlignment="Left" Margin="60,250,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_Calculate" Content="Calculate" HorizontalAlignment="Left" Margin="404,303,0,0" VerticalAlignment="Top" Width="93" Click="Button_Click" Height="30"/>
        <TextBox x:Name="Amount" HorizontalAlignment="Left" Height="23" Margin="60,204,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Interest" HorizontalAlignment="Left" Height="23" Margin="219,204,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Period" HorizontalAlignment="Left" Height="23" Margin="377,204,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="MonthlyPayments" HorizontalAlignment="Left" Height="23" Margin="377,250,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="83" Margin="49,43,0,0" VerticalAlignment="Top" Width="462"/>

    </Grid>
</Window>
